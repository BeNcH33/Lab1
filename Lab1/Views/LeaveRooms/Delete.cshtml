@model Lab1.Models.LeaveRooms


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Удалить</title>
</head>
<body>
    <h3>Вы уверены что хотите удалить?</h3>
    <div>
        <h4>Жилые комнаты</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.NumberRoom)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.NumberRoom)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.NumberFloor)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.NumberFloor)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Count)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Count)
            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Удалить" class="btn btn-default" /> |
                @Html.ActionLink("Вернуться назад", "Index")
            </div>
        }
    </div>
</body>
</html>
