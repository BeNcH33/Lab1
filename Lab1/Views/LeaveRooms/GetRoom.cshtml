@model IEnumerable<Lab1.Models.LeaveRooms>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Главная</title>
</head>
<body>
    <p>
        @Html.ActionLink("Добавить запись", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumberRoom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberFloor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chear)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberRoom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberFloor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chear)
                </td>
                <td>
                    @Html.RouteLink("Продолжить", new { controller = "Contracts", action = "Create", IDStudent = ViewBag.idstudent, IDRoom = item.ID })
                </td>
            </tr>
        }

    </table>
</body>
</html>

